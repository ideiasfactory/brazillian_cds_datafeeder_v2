# ================================
# APPLICATION SETTINGS
# ================================

# BetterStack (Logtail) Configuration (Optional - Production Only)
# Sign up at: https://betterstack.com/logtail
# Get your source token from: https://logs.betterstack.com/team/[TEAM_ID]/sources
# Only active in production environment for security
BETTERSTACK_SOURCE_TOKEN=your_source_token_here
BETTERSTACK_INGESTING_HOST=in.logtail.com

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application environment: development, staging, production
# BetterStack only sends logs when ENVIRONMENT=production
ENVIRONMENT=development

# API version identifier
API_VERSION=2.0.0

# Server host and port (for local development)
HOST=0.0.0.0
PORT=8000

# ================================
# VERCEL DEPLOYMENT
# ================================

# Automatically set by Vercel (do not modify)
# VERCEL=1

# ================================
# DATABASE CONFIGURATION
# ================================

# Database connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://admin:secret@localhost:5432/cds_data
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ================================
# REDIS CACHE (Optional)
# ================================

# Redis connection for caching
# REDIS_URL=redis://localhost:6379/0
# REDIS_TTL=3600

# ================================
# API SECURITY
# ================================

# Secret key for JWT token generation (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# JWT token expiration in minutes
JWT_EXPIRATION_MINUTES=60

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ================================
# LOGGING
# ================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, logs to stdout if not set)
# LOG_FILE=/var/log/cds_datafeeder.log

# ================================
# EXTERNAL SERVICES
# ================================

# Brazilian CDS Data Source API
# CDS_API_URL=https://api.example.com/cds
# CDS_API_KEY=your-api-key-here

# ================================
# MONITORING & HEALTH
# ================================

# Enable health check endpoints
HEALTH_CHECK_ENABLED=true

# Database health check timeout in seconds
DB_HEALTH_CHECK_TIMEOUT=5

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable specific features
FEATURE_REALTIME_UPDATES=false
FEATURE_CACHING=true
FEATURE_RATE_LIMITING=true

# Rate limiting settings
RATE_LIMIT_PER_MINUTE=60
